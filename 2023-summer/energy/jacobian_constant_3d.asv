clear
m_e = 5.9742*10^24;
m_l = 7.36*10^22;
mu = m_l / (m_e+m_l);


[x,y,z] = meshgrid(linspace(-2,2,120));
p = (x.^2+y.^2) + 2*(1-mu)./sqrt((x+mu).^2+y.^2+z.^2) + 2 * mu ./sqrt((x-1+mu).^2+y.^2);
JC = 3.13;


figure
view(3)
for i = 1:length(JC)
    isosurface(x,y,z,p,JC(i))
    hold on
    plot(-mu,0,'Marker','.','MarkerSize',40)
    plot(1-mu,0,'Marker','.','MarkerSize',10)
    hold off
    title("Jacobi Constant = "+num2str(JC(i)))
    grid on
    drawnow
    
end